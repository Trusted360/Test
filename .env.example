# Trusted360 Environment Configuration
# Copy this file to .env and modify values as needed

# Database Configuration
POSTGRES_USER=trusted360
POSTGRES_PASSWORD=trusted360_password
POSTGRES_DB=trusted360
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Ollama Configuration
OLLAMA_PORT=11434
OLLAMA_MODEL_PRIMARY=llama3.2:3b-instruct-q4_K_M
OLLAMA_MODEL_FALLBACK=llama3.2:3b-instruct-q4_K_M

# API Configuration
API_PORT=3001
NODE_ENV=development

# Web UI Configuration
WEB_PORT=8088

# Traefik Configuration
TRAEFIK_WEB_PORT=8090
TRAEFIK_WEBSECURE_PORT=8443
TRAEFIK_DASHBOARD_PORT=8081

# Application Domain (change for different environments)
APP_DOMAIN=trusted360.local

# Resource Limits (adjust for your hardware)
OLLAMA_MEMORY_LIMIT=4G
OLLAMA_MEMORY_RESERVATION=2G
API_MEMORY_LIMIT=1G
API_MEMORY_RESERVATION=256M